body
  background-color: rgb(33, 33, 33)

#grid
  margin: 4px auto
  max-width: 512px

.tile
  background-color: rgb(126, 196, 33)
  border: 10px solid transparent
  margin: 4px
  width: 100px
  height: 100px
  float: left
  position: relative
  overflow: hidden

.tile-content
  position: absolute
  width: 100%
  height: 100%

.tile-background
  width: 100%
  height: 100%
  background-size: contain
  background-position: center
  background-repeat: no-repeat

tile-transition(w, h)
  > .tileTransition-enter
    top: - h
    
    &.tileTransition-enter.tileTransition-enter-active
      top: 0
      transition: top 1s ease-in

  > .tileTransition-leave
    top: 0
    
    &.tileTransition-leave.tileTransition-leave-active
      top: h
      transition: top 1s ease-in

tile-size(w, h)
  width: w
  height: h
  tile-transition w h

.tile-small
  tile-size 56px 56px

.tile-medium
  tile-size 120px 120px

.tile-wide
  tile-size 248px 120px

.tile-large
  tile-size 248px 248px
